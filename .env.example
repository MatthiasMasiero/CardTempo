# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Service Role Key (for server-side operations, cron jobs)
# ⚠️ KEEP SECRET - Never expose in client code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Resend Email Service
# Get your API key from https://resend.com
RESEND_API_KEY=re_your_api_key

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron Job Secret (for Vercel Cron authentication)
# Generate a random string for security
CRON_SECRET=your_random_secret_here

# Upstash Redis (for distributed rate limiting in production)
# Get these from https://console.upstash.com
# Free tier: 10,000 commands/day - perfect for small-medium apps
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Stripe Configuration (for Premium subscriptions)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Stripe Price IDs (create in Stripe Dashboard → Products)
# Monthly: $3.99/month, Annual: $29.99/year
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_ID_ANNUAL=price_your_annual_price_id
